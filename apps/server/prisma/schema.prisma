generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")

}


model User {
  id      Int      @id @default(autoincrement())
  username    String @unique
  password   String   
  createdAt   DateTime @default(now())

}

model Attempt {
  id      Int      @id @default(autoincrement())
  word   String   
  createdAt   DateTime @default(now())
  correct Boolean
}

model Goal {
  id      Int      @id @default(autoincrement())
  username    String
  goalTitle   String   @unique
  createdAt   DateTime @default(now())

}

model Word {
  id      Int      @id @default(autoincrement())
  term   String   
  definition String
  lessonID Int
  lesson Lesson @relation (fields: [lessonID], references: [id])
}

model Lesson {
  id      Int      @id @default(autoincrement())
  title String @unique
  words Word[]
}
