generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  username    String @unique
  password   String
  lessons Lesson[]
  attempts Attempt[]
  goals Goal[]
  createdAt   DateTime @default(now())
}

model Attempt {
  id      Int      @id @default(autoincrement())
  wordId Int
  correct Boolean
  createdAt   DateTime @default(now())
  lessonId Int
  userId Int
  lesson Lesson @relation (fields: [lessonId], references: [id])
  user User @relation (fields: [userId], references: [id])
  word Word @relation (fields: [wordId], references: [id])
}

model Goal {
  id      Int      @id @default(autoincrement())
  goalTitle   String   
  createdAt   DateTime @default(now())
  userId Int
  user User @relation (fields: [userId], references:[id])

}

model Word {
  id      Int      @id @default(autoincrement())
  term   String   
  definition String
  lessonId Int
  lesson Lesson @relation (fields: [lessonId], references: [id])
  attempts Attempt[]
}

model Lesson {
  id      Int      @id @default(autoincrement())
  title String 
  words Word[]
  attempts Attempt[]
  userId Int
  user User @relation (fields: [userId], references: [id])
}


