generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  username    String @unique
  password   String
  lessons Lesson[]
  attempts Attempt[]
  goals Goal[]
  wordle Wordle[]
  createdAt   DateTime @default(now())
}


model Goal {
  id      Int      @id @default(autoincrement())
  goalTitle   String   
  createdAt   DateTime @default(now())
  userId Int
  user User @relation (fields: [userId], references:[id])

  @@unique([goalTitle, userId])
}

model Word {
  id      Int      @id @default(autoincrement())
  term   String   
  definition String
  lessonId Int
  lesson Lesson @relation (fields: [lessonId], references: [id])
}

model Lesson {
  id      Int      @id @default(autoincrement())
  title String 
  words Word[]
  attempts Attempt[]
  userId Int
  wordle Wordle? 
  user User @relation (fields: [userId], references: [id])
}

model Attempt {
  id         Int      @id @default(autoincrement())
  userId     Int
  lessonId   Int
  attemptNum Int
  correct    Boolean
  answers    Json?
  createdAt  DateTime @default(now())

  lesson Lesson @relation(fields: [lessonId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}

model Wordle {
  id         Int      @id @default(autoincrement())
  userId     Int
  lessonId   Int @unique
  guesses    Json?
  attemptNum Int
  correct    Boolean
  createdAt  DateTime @default(now())

  lesson Lesson @relation(fields: [lessonId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}



